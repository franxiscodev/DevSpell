# Configuración de la aplicación
APP_NAME=DevSpell API
APP_VERSION=0.1.0
DEBUG=true

# Servidor
HOST=0.0.0.0
PORT=8000

# CORS - URLs permitidas
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]

# -----------------------------------------------------------------------------
# Database - PostgreSQL
# -----------------------------------------------------------------------------
POSTGRES_USER=devspell
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD
POSTGRES_DB=devspell
POSTGRES_PORT=5433

# Database URL para la aplicación
# IMPORTANTE: Mantener sincronizado con las variables de arriba
DATABASE_URL=postgresql://devspell:CHANGE_ME_STRONG_PASSWORD@localhost:5433/devspell

# Connection Pool
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10

# -----------------------------------------------------------------------------
# Security - JWT Authentication
# -----------------------------------------------------------------------------
# Generar con: uv run python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=CHANGE_ME_GENERATE_WITH_SECRETS_TOKEN_URLSAFE
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# -----------------------------------------------------------------------------
# Logging
# -----------------------------------------------------------------------------
LOG_LEVEL=DEBUG

# -----------------------------------------------------------------------------
# AI Configuration - Ollama (Local)
# -----------------------------------------------------------------------------
AI_PROVIDER=ollama

# OLLAMA_BASE_URL: URL del servicio Ollama
# - Usar http://localhost:11434 cuando el backend corre FUERA de Docker (uv run uvicorn)
# - Usar http://ollama:11434 cuando el backend corre DENTRO de Docker
OLLAMA_BASE_URL=http://localhost:11434

OLLAMA_MODEL=deepseek-coder:1.3b
OLLAMA_TIMEOUT=60

# Future: Google Gemini API (Optional backup)
# GEMINI_API_KEY=your_api_key_here

# -----------------------------------------------------------------------------
# Future: Claude API (Sprint 5)
# -----------------------------------------------------------------------------
# ANTHROPIC_API_KEY=sk-ant-CHANGE_ME

# -----------------------------------------------------------------------------
# Future: AWS Deploy (Sprint 6)
# -----------------------------------------------------------------------------
# AWS_ACCESS_KEY_ID=CHANGE_ME
# AWS_SECRET_ACCESS_KEY=CHANGE_ME
# AWS_REGION=us-east-1